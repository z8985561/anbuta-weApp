/* pages/dealer/dealer-order-list/dealer-order-list.wxss */
.fui-cell-group{
  margin-top:0;
}
.fui-cell-group::after,.fui-cell-group::before{
  display: none;
}
.picker{
  position: relative;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #999999;
  background:rgba(251,251,251,1);
  border-radius:8rpx;
  border:1px solid rgba(238,238,238,1);
}
.order-item{
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}
.order-status{
  margin: 0 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #EEEEEE;
  text-align: left;
}
.status-str{
  padding: 4rpx 15rpx;
  font-size: 22rpx;
  color: #FF5355;
  background:rgba(255,254,254,1);
  border-radius:4px;
  border:1px solid rgba(255,181,182,1);
}